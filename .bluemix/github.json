{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/github.title"
    },
    "description": {
        "$ref": "#/messages/github.description"
    },
    "longDescription": {
        "$ref": "#/messages/github.longDescription"
    },
    "type": "object",
    "properties": {
        "sample-repo_name": {
            "type": "string"
        },
        "sample-repo_url": {
            "type": "string"
        }
    },
    "required": [
        "sample-repo_name",
        "sample-repo_url"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/custom_github_helper.html"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "18%",
                "38%",
                "6%",
                "38%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/github.sourceRepository"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/github.targetRepository"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/github.sampleRepository"
                    }
                },
                {
                    "type": "text",
                    "key": "sample-repo_url"
                },
                {
                    "type": "icon",
                    "iconType": "right_arrow"
                },
                {
                    "type": "text",
                    "key": "sample-repo_name"
                }
            ]
        }
    ]
}