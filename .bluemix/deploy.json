{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "blockchain-service-instance": {
            "description": {
                "$ref": "#/messages/deploy.blockchainServiceDescription"
            },
            "type": "string",
            "pattern": "^.{1,50}$"
        },
        "cloudant-service-instance": {
            "description": {
                "$ref": "#/messages/deploy.cloudantServiceDescription"
            },
            "type": "string",
            "pattern": "^.{1,50}$"
        },
        "deploy-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "deploy-region": {
            "description": {
                "$ref": "#/messages/deploy.regionDescription"
            },
            "type": "string",
            "pattern": "^(ibm:yp:us-south|ibm:ys1:us-south)$"
        },
        "deploy-organization": {
            "description": {
                "$ref": "#/messages/deploy.organizationDescription"
            },
            "type": "string"
        },
        "deploy-space": {
            "description": {
                "$ref": "#/messages/deploy.spaceDescription"
            },
            "type": "string"
        }
    },
    "required": [
        "blockchain-service-instance",
        "cloudant-service-instance",
        "deploy-app-name",
        "deploy-region",
        "deploy-organization",
        "deploy-space"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.blockchainServiceName"
            },
            "key": "blockchain-service-instance"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.cloudantServiceName"
            },
            "key": "cloudant-service-instance"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "deploy-app-name"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["33%", "33%", "33%"],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.regionName"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.organizationName"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.spaceName"
                    }
                },
                {
                    "type": "select",
                    "key": "deploy-region"
                },
                {
                    "type": "select",
                    "key": "deploy-organization"
                },
                {
                    "type": "select",
                    "key": "deploy-space",
                    "readonly": false
                }
            ]
        }
    ]
}